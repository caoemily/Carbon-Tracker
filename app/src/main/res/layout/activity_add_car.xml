<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sfu276assg1.yancao.carbontracker.AddCarActivity">

    <TextView
        android:id="@+id/give_Nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/nickname"
        android:text="Nickname:"
        android:layout_alignBottom="@+id/editNickname"
        android:layout_toLeftOf="@+id/editNickname"
        android:layout_toStartOf="@+id/editNickname"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <Button
        android:id="@+id/btnOkAddCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/car_year"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/car_year"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:text="@string/ok" />

    <Spinner
        android:id="@+id/car_make"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/give_Nickname"
        android:layout_alignLeft="@+id/give_Nickname"
        android:layout_alignStart="@+id/give_Nickname" />

    <Spinner
        android:id="@+id/car_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/car_make"
        android:layout_alignLeft="@+id/car_make"
        android:layout_alignStart="@+id/car_make" />

    <Spinner
        android:id="@+id/car_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_model"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/car_model"
        android:layout_alignStart="@+id/car_model" />


    <EditText
        android:id="@+id/editNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/please_enter_a_nickname_for_the_car"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/makeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/car_make"
        android:layout_alignLeft="@+id/car_make"
        android:layout_alignStart="@+id/car_make"
        android:layout_marginBottom="23dp"
        android:text="@string/make" />

    <TextView
        android:id="@+id/modelTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/car_model"
        android:layout_alignLeft="@+id/car_model"
        android:layout_alignStart="@+id/car_model"
        android:layout_marginBottom="25dp"
        android:text="@string/model" />


</RelativeLayout>