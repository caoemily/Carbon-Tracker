<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sfu276assg1.yancao.carbontracker.SelectTranModeActivity">

    <Button
        android:id="@+id/btn_selectCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="53dp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_selectPubTran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public Transit"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="147dp"
        android:layout_below="@+id/btn_selectCar"
        android:layout_alignLeft="@+id/btn_selectCar"
        android:layout_alignStart="@+id/btn_selectCar"
        android:layout_marginTop="54dp" />

    <Button
        android:id="@+id/btn_selectWalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walk or Bike"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="253dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_selectPubTran"
        android:layout_alignStart="@+id/btn_selectPubTran" />

</RelativeLayout>
