<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_route"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sfu276assg1.yancao.carbontracker.AddRouteActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Distance (km): "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/textView_routeDistance"
                android:textSize="14sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/editView_enterDistance"
                android:layout_marginTop="20dp"
                android:hint="Distnace in km"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Highway (%): "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/textView_highwayPer"
                android:textSize="14sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/editView_enterHighwayPer"
                android:layout_marginTop="20dp"
                android:hint="Percentage of highway driving."
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="City (%):"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/textView_cityPer"
                android:textSize="14sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/editView_enterCityPer"
                android:layout_marginTop="20dp"
                android:hint="Percentage of city driving."
                android:textSize="14sp" />

        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="calculate without save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="27dp"
            android:layout_marginEnd="27dp"
            android:id="@+id/btn_noSaveRoute"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Route Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="104dp"
            android:id="@+id/text_routeName" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_enterRouteName"
            android:hint="Route Name"
            android:textSize="14sp"
            android:layout_alignBaseline="@+id/text_routeName"
            android:layout_alignBottom="@+id/text_routeName"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="If choose to save the route, please give it a name."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_RouteSaveHint"
            android:layout_above="@+id/editText_enterRouteName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp" />

        <Button
            android:text="save and calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_accRoute"
            android:textSize="14sp"
            android:layout_below="@+id/editText_enterRouteName"
            android:layout_alignRight="@+id/btn_noSaveRoute"
            android:layout_alignEnd="@+id/btn_noSaveRoute" />

    </RelativeLayout>

</RelativeLayout>
