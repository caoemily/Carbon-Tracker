        <activity android:name="com.sfu276assg1.yancao.UI.SelectTransModeActivity"
            android:noHistory="true"/>
        <activity android:name="com.sfu276assg1.yancao.UI.MonthlyUtilitiesActivity"
            android:noHistory="true"/>
        <activity android:name="com.sfu276assg1.yancao.UI.AddBillActivity"
            android:noHistory="true"/>
        <activity android:name="com.sfu276assg1.yancao.UI.DisplayBarChart"
            android:noHistory="true"/>
        <activity android:name="com.sfu276assg1.yancao.UI.DisplayLineChart"
            android:noHistory="true"/>
        <activity android:name="com.sfu276assg1.yancao.UI.MainActivity"
            android:noHistory="true"
            android:logo="@drawable/co2_cloud"/>
        <activity android:name="com.sfu276assg1.yancao.UI.AppInfoActivity" />

        <service
            android:name="com.sfu276assg1.yancao.UI.NotificationService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>