    <application
        android:allowBackup="true"
        android:icon="@drawable/leaf"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sfu276assg1.yancao.UI.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sfu276assg1.yancao.UI.SelectCarActivity"
            android:noHistory="true"/>
        <activity android:name="com.sfu276assg1.yancao.UI.AddCarActivity"
            android:noHistory="true"/>
        <activity android:name="com.sfu276assg1.yancao.UI.SelectRouteActivity"
            android:noHistory="true"/>
